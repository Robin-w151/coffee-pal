{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$assets": ["./src/assets"],
      "$assets/*": ["./src/assets/*"]
    },
    "types": ["vite/client", "vite-plugin-pwa/info"]
  },
  "include": [
    ".svelte-kit/ambient.d.ts",
    ".svelte-kit/types/**/$types.d.ts",
    "./scripts/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./tailwind.config.ts",
    "./tests/**/*.js",
    "./tests/**/*.ts",
    "./tests/**/*.svelte",
    "./theme.ts",
    "./vite.config.ts"
  ],
  "exclude": [
    ".svelte-kit/[!ambient.d.ts]**",
    "./node_modules/**",
    "./src/service-worker.js",
    "./src/service-worker.ts",
    "./src/service-worker.d.ts"
  ]
}
